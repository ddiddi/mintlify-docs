{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Solo Documentation",
  "colors": {
    "primary": "#2986cc",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "introduction",
              "quickstart",
              "tutorials",
              "development",
              "advanced"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/markdown",
              "concepts/code",
              "concepts/images",
              "concepts/settings",
              "concepts/navigation",
              "concepts/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://www.getsolo.tech",
          "icon": "globe"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://getsolotech.substack.com",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:ddiddi@getsolo.tech"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/getsolotech",
      "github": "https://github.com/getsolotech",
      "linkedin": "https://linkedin.com/company/getsolotech"
